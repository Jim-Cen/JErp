<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jim.pers.jerp.mapper.GoodsMapper">
    <select id="getGoodsByUuid"  resultType="jim.pers.jerp.model.Goods">
        SELECT  uuid, name, origin,producer,unitUuid,inPrice,outPrice,goodsTypeUuid
        FROM tbl_goods
        WHERE uuid=#{uuid}
    </select>
    <select id="getUnits"  resultType="jim.pers.jerp.model.Unit">
        SELECT  uuid, name
        FROM tbl_unit
        ORDER BY uuid;
    </select>
    <insert id="setGoods">
        insert into tbl_Goods(name,origin,producer,unitUuid,inPrice,outPrice,goodsTypeUuid)
        values(#{goods.name},#{goods.origin},#{goods.producer},#{goods.unitUuid},
              #{goods.inPrice},#{goods.outPrice},#{goods.goodsTypeUuid})
        <selectKey resultType="java.lang.Integer" keyProperty="id" >
            SELECT @@IDENTITY AS ID
        </selectKey>
    </insert>
</mapper>